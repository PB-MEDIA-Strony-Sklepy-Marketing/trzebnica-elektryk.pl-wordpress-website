{
    "name": "pb-media/trzebnica-elektryk-wordpress",
    "description": "WordPress website for Voltmont - Instalacje Elektryczne",
    "type": "wordpress-site",
    "license": "proprietary",
    "authors": [
        {
            "name": "PB-MEDIA",
            "email": "dev@pb-media.pl",
            "homepage": "https://pb-media.pl"
        }
    ],
    "homepage": "https://trzebnica-elektryk.pl",
    "support": {
        "issues": "https://github.com/PB-MEDIA-Strony-Sklepy-Marketing/trzebnica-elektryk.pl-wordpress-website/issues"
    },
    "require": {
        "php": ">=8.0",
        "composer/installers": "^2.2",
        "vlucas/phpdotenv": "^5.6",
        "roots/wordpress": "^6.4",
        "wpackagist-plugin/contact-form-7": "^5.8",
        "wpackagist-plugin/wordpress-seo": "^21.0",
        "wpackagist-plugin/wp-super-cache": "^1.11",
        "wpackagist-plugin/wordfence": "^7.10",
        "wpackagist-plugin/redirection": "^5.4",
        "wpackagist-plugin/wp-mail-smtp": "^3.10",
        "wpackagist-plugin/google-site-kit": "^1.118",
        "wpackagist-plugin/all-in-one-seo-pack": "^4.5",
        "wpackagist-plugin/wp-optimize": "^3.3",
        "wpackagist-plugin/updraftplus": "^1.23"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.8",
        "wp-coding-standards/wpcs": "^3.0",
        "phpmd/phpmd": "^2.14",
        "phpunit/phpunit": "^9.6",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "symfony/var-dumper": "^6.4",
        "roave/security-advisories": "dev-latest"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        {
            "type": "vcs",
            "url": "https://github.com/WordPress/WordPress"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpcs": "phpcs --standard=WordPress --extensions=php wp-content/themes/hubag-child",
        "phpcbf": "phpcbf --standard=WordPress --extensions=php wp-content/themes/hubag-child",
        "phpmd": "phpmd wp-content/themes/hubag-child text phpmd.xml",
        "phpstan": "phpstan analyse wp-content/themes/hubag-child --level=5",
        "lint": [
            "@phpcs",
            "@phpmd",
            "@phpstan"
        ],
        "fix": "@phpcbf",
        "post-install-cmd": [
            "@setup-wp-coding-standards"
        ],
        "post-update-cmd": [
            "@setup-wp-coding-standards"
        ],
        "setup-wp-coding-standards": [
            "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
        ],
        "wp-install": [
            "wp core download --locale=pl_PL",
            "wp config create --dbname=wordpress --dbuser=root --dbpass=root --locale=pl_PL",
            "wp core install --url=http://localhost:8080 --title='Voltmont' --admin_user=admin --admin_password=admin --admin_email=admin@trzebnica-elektryk.pl",
            "wp theme activate hubag-child",
            "wp plugin activate --all",
            "wp rewrite structure '/%postname%/'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "wordpress-install-dir": "wordpress",
        "installer-paths": {
            "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "wp-content/themes/{$name}/": ["type:wordpress-theme"],
            "wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"]
        }
    }
}