{
  "name": "trzebnica-elektryk-wordpress",
  "version": "2.0.0",
  "description": "WordPress website for Voltmont - Instalacje Elektryczne",
  "author": "PB-MEDIA",
  "license": "Proprietary",
  "homepage": "https://trzebnica-elektryk.pl",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PB-MEDIA-Strony-Sklepy-Marketing/trzebnica-elektryk.pl-wordpress-website.git"
  },
  "keywords": [
    "wordpress",
    "betheme",
    "electrical-services",
    "local-seo",
    "trzebnica"
  ],
  "scripts": {
    "dev": "webpack serve --mode development --open",
    "build": "webpack --mode production",
    "build:production": "cross-env NODE_ENV=production webpack --mode production",
    "watch": "webpack --watch --mode development",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint 'wp-content/themes/hubag-child/assets/js/**/*.js'",
    "lint:css": "stylelint 'wp-content/themes/hubag-child/assets/css/**/*.css'",
    "format": "prettier --write '**/*.{js,css,json,md}'",
    "test": "jest",
    "test:e2e": "cypress open",
    "test:e2e:headless": "cypress run",
    "test:a11y": "pa11y-ci",
    "test:lighthouse": "lighthouse https://trzebnica-elektryk.pl --output html --output-path ./lighthouse-report.html",
    "test:coverage": "jest --coverage",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "analyze:ci": "webpack --profile --json > dist/stats.json && webpack-bundle-analyzer dist/stats.json --mode static --report dist/bundle-report.html --no-open",
    "optimize:images": "imagemin 'wp-content/themes/hubag-child/assets/images/**/*' --out-dir='wp-content/themes/hubag-child/assets/images'",
    "budget:check": "bundlesize",
    "deploy:staging": "npm run build && rsync -avz --delete dist/ staging:/var/www/staging.trzebnica-elektryk.pl/",
    "deploy:production": "npm run build:production && rsync -avz --delete dist/ production:/var/www/trzebnica-elektryk.pl/",
    "wp:update": "wp core update && wp plugin update --all && wp theme update --all",
    "wp:backup": "wp db export backups/backup-$(date +%Y%m%d-%H%M%S).sql",
    "wp:optimize": "wp db optimize && wp cache flush",
    "preflight": "npm run lint && npm run test && npm run build",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.1",
    "aos": "^2.3.4",
    "glightbox": "^3.2.0",
    "swiper": "^11.0.5",
    "lazysizes": "^5.3.2",
    "vanilla-lazyload": "^17.8.5"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@wordpress/eslint-plugin": "^17.4.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "bundlesize": "^0.18.1",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cypress": "^13.6.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^8.0.3",
    "image-webpack-loader": "^8.1.0",
    "imagemin-cli": "^7.0.0",
    "jest": "^29.7.0",
    "lighthouse": "^11.4.0",
    "lint-staged": "^15.2.0",
    "mini-css-extract-plugin": "^2.7.6",
    "pa11y-ci": "^3.1.0",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.4",
    "prettier": "^3.1.1",
    "purgecss-webpack-plugin": "^5.0.0",
    "sass": "^1.69.7",
    "sass-loader": "^13.3.3",
    "style-loader": "^3.3.3",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-wordpress": "^19.1.0",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "bundlesize": [
    {
      "path": "./dist/js/*.js",
      "maxSize": "50 kB"
    },
    {
      "path": "./dist/css/*.css",
      "maxSize": "30 kB"
    }
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}